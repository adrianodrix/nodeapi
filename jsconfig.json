{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@controller/*": ["src/controllers/*"],
      "@model": ["src/models"],
      "@service": ["src/service"],
      "@helper": ["src/helpers"],
      "@middleware": ["src/middlewares"]
    }
  },
  "exclude": ["node_modules", "dist"]
}